<div>
  {{#each accounts as |account|}}
  {{!-- account balance --}}
  {{#if account.is_checking}}
  <h1>Account Balance</h1>

    <p>Amount: ${{account.acc_balance}}</p> 
  
  {{else}}
    <p>No Checking Account</p>

  {{/if}}

  {{/each}}

  {{!-- list previous transactions --}}

  <div>
    {{!-- creates row headers --}}
    <h3>Previous Transactions</h3>
    {{#if transaction}}
    <ul class="list-group list-group-horizontal">
      <li class="list-group-item">Transaction ID</li>
      <li class="list-group-item">Amount</li>
      <li class="list-group-item">Notes</li>
      <li class="list-group-item">Payment Destination</li>
      {{/if}}

      {{#each transactions as |transaction|}}
      {{#if transaction.amount}}

      <div>
        
        <ul class="list-group list-group-horizontal">
          <li class="list-group-item">{{transaction.transaction_id}}</li>
          <li class="list-group-item">{{transaction.amount}}</li>
          <li class="list-group-item">{{transaction.notes}}</li>
          <li class="list-group-item">{{transaction.payment_destination}} </li>
      </div>
      {{else}}
      <p>No transactions</p>
      {{/if}}
      {{/each}}
  </div>

  <form>
    <div class="form-group">
      <label for="exampleFormControlInput1">Payment Amount</label>
      <input type="text" class="form-control" id="t-notes" placeholder="Amount">
    </div>

    <div class="form-group">
      <label for="exampleFormControlInput1">Payment Distinations</label>
      <input type="text" class="form-control"  id="t-destination" placeholder="Payment Destination">
    </div>

    <div class="form-group">
      <label for="exampleFormControlInput1">Payment Notes</label>
      <input type="text" class="form-control" id="t-amount" placeholder="Notes">
    </div>
    <button type="button submit" class="btn btn-primary">Make Transaction</button>

  </form>

  {{!-- make a deposit --}}


<div>
    <h3>Previous Transactions</h3>
      {{#each transactions as |transaction|}}
        {{#if transaction.amount}}

      <div>
        {{!-- need transactions.id --}}
        <p>{{transaction.transaction_id}}</p>
        <p>{{transaction.amount}}</p>
        <p>{{transaction.notes}}</p>
        <p>{{transaction.payment_destination}}</p>
      </div>
      {{else}}
    <p>No transactions</p>
    {{/if}}
    {{/each}}
  </div>

  <script src="/js/account.js"></script>
